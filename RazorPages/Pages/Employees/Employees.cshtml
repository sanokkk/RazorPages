@page
@model RazorPages.Pages.Employees.EmployeesModel
@{
	ViewData["Title"] = "Employees";
}
<h1>Employees</h1>
<div class="row">
@foreach(var el in @Model.Employees)
	{
		var photoPath = $"/img/{el.PhotoPath}";
		<div class="col-12 col-sm-6 col-lg-4">
			<div class="card-deck">
				<div class="card m-3" style="box-shadow:inherit;">
					<div class="card-header text-center">
						<h3>@el.Name</h3>
					</div>
					<div class="card-body text-center">
						<img class="card-img-top" src="@photoPath"/>
					</div>
					<div class="card-footer text-center">
						<a asp-page="/Employees/Edit" asp-route-ID="@el.Id" class="btn btn-primary m-1">Edit</a>
						<a asp-page="/Employees/Delete" asp-route-ID="@el.Id" class="btn btn-danger m-1">Delete</a>
						<a asp-page="/Employees/Details"  asp-route-ID="@el.Id" class="btn btn-info">Details</a>
					</div>
				</div>
			</div>
		</div>
	}
			
</div>	



